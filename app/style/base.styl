.bee
  font-size: 12px
  font-family "PingFang SC", "Avenir", "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei", "Hiragino Sans GB", "Heiti SC", "WenQuanYi Micro Hei", sans-serif
  font-weight: normal
  -webkit-text-size-adjust: none
  a
    text-decoration none
.bee.mask
  position fixed
  top 0
  left 0
  z-index 1000
  width 100%
  height 100%
  background-color rgba(0,0,0,.6)
.bee.dialog
  position fixed
  top 50%
  left 50%
  width 80%
  max-width 300px
  border-radius 3px
  transform translate(-50%,-50%)
  background-color #fff
  overflow hidden
.bee.dialog-hd
  padding 1.3em 1.6em .5em
  text-align center
  strong
    font-weight normal
    font-size 18px
.bee.dialog-bd
  padding 0 1.6em .8em
  min-height 30px
  font-size 16px
  line-height 1.3
  text-align: center
  word-wrap break-word
  word-break break-all
  color #999
.bee.dialog-ft
  display flex
  line-height 2.6
  box-shadow 0 -1px 0 0 rgba(0,0,0,.12)
.bee.dialog-buttom
  flex 1
  text-align center
  font-size 16px
  color #353535
  &:not(:last-child)
    border-right 1px solid rgba(0,0,0,.12)
  &:last-child
    color #3CC51F
